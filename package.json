{
  "private": true,
  "workspaces": [
    "apps/common",
    "apps/public",
    "apps/admin"
  ],
  "scripts": {
    "predeploy": "yarn workspaces run build",
    "deploy": "firebase deploy --only hosting",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "export": "mkdir -p backup && firestore-export -a malenovska-service-account.json -p -b backup/$(date -I).json",
    "start": "npm-run-all -p start:*",
    "start:admin": "yarn workspace @malenovska/admin start",
    "start:public": "yarn workspace @malenovska/public start"
  },
  "devDependencies": {
    "firebase-tools": "9.19.0",
    "node-firestore-import-export": "1.1.0",
    "npm-run-all": "4.1.5"
  },
  "version": "0.0.0"
}
