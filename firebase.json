{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [ {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        } ]
      },
      {
        "source": "**/*.@(jpg|jpeg|gif|png|js|eot|otf|ttf|ttc|woff|font.css)",
        "headers": [
          {
          "key": "Cache-Control",
          "value": "max-age=86400"
          }
        ]
      }
    ]
  }
}
